                else if translation && !login
                    button(type="button" class="btn btn-default navbar-btn navbar-left" style='margin-right:15px' id="sign_in") #{translation.in}
                    button(type="button" class="btn btn-default navbar-btn navbar-left" id="sign_up_toggle") #{translation.up}
                    form
                        div(id="42_sign_in")
                            a(href="https://api.intra.42.fr/oauth/authorize?client_id=ad3235caccb1f5d591b4136a695284080b9a7db99ba6f0e13da1b0bb7a592c53&redirect_uri=http%3A%2F%2Flocalhost%3A3000%2Fsign_in_ft&response_type=code" class="navbar-left navbar-btn" style="margin-top:3px;")
                                img(src="/images/42_logo.png" width="43" height="43" style='margin-left:15px')
                    div(id="fbtn" class="fb-login-button" data-max-rows="1" data-size="large" onlogin="checkLoginState_fb();" style='margin-left:20px;margin-top:9px;')
                else
                    button(type="button" class="btn btn-default navbar-btn navbar-left" style='margin-right:15px;display:none' id="sign_in") Sign in
                        button(type="butoon" class="btn btn-default navbar-btn navbar-left" id="sign_up_toggle" style="display:none") Sign up
                        form
                            div(id="42_sign_in" style="display:none;")
                                a(href="https://api.intra.42.fr/oauth/authorize?client_id=ad3235caccb1f5d591b4136a695284080b9a7db99ba6f0e13da1b0bb7a592c53&redirect_uri=http%3A%2F%2Flocalhost%3A3000%2Fsign_in_ft&response_type=code" class="navbar-left navbar-btn" style="margin-top:3px;")
                                    img(src="/images/42_logo.png" width="43" height="43" style='margin-left:15px')
                        div(id="fbtn" class="fb-login-button" data-max-rows="1" data-size="large" onlogin="checkLoginState();" style='margin-left:20px;margin-top:9px;display:none;')
                if translation
                    li(class="navbar-left" id="pass-reset" style="display: none;")
                        a#forgot_pass #{translation.forgot_pass}
                else
                    li(class="navbar-left" id="pass-reset" style="display: none;")
                        a#forgot_pass Forgot password ?
                div(class="alert alert-danger form-group navbar-left" role="alert" id="connection_erreur" style="display:none;margin-right:15px;margin-bottom:0px")
                ul(class="nav navbar-nav navbar-right")
                    li
                        if login
                            a(id="name")
                                span #{name}
                        else
                            a(id="name" style="display:none")
                                span
                    li
                        if login
                            a(id="login_value")
                                span.glyphicon.glyphicon-home#home(aria-hidden="true")
                        else
                            a(id="login_value" style="display:none")
                                span.glyphicon.glyphicon-home#home(aria-hidden="true")
                    li
                        if langue == "FR"
                            button.btn.btn-default.navbar-btn.navbar-left#langue(type="button") EN
                        if langue == "EN"
                            button.btn.btn-default.navbar-btn.navbar-left#langue(type="button") FR
                    li
                        if login
                            a(id="logout")
                                span.glyphicon.glyphicon-off(aria-hidden="true")
                        else
                            a(id="logout" style="display:none")
                                span.glyphicon.glyphicon-off(aria-hidden="true")
                    div.profile(style="display:none;padding:30px 15px 15px 15px")
