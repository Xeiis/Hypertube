                else
                    div(class="login-bloc navbar-left")
                        form
                            div(class="form-group navbar-form " id="sign_in_form" style="display: none;")
                                input(type="text" class="form-control" id="login_in" placeholder="login" style="margin-right:15px")
                                input(type="password" class="form-control" id="password_in" placeholder="password" style="margin-right:15px")
                                button(class="btn btn-default" id="submit_connection" ) Connection
                if translation && login
                    button(type="button" class="btn btn-default navbar-btn navbar-left" style='margin-right:15px;display:none' id="sign_in") #{translation.in}
