div(id="header" style="position:fixed; width:100%;z-index: 20;")
    nav(class="navbar navbar-default" style="border-radius: 0px; margin-bottom:0px; box-shadow: 9px 2px 10px 5px grey;")
        div(class="container-fluid")
            div(class="navbar-header")
                a(class="navbar-brand" href="/") Hypertube
            div(class="collapse navbar-collapse" id="bs-example-navbar-collapse-1")
                ul(class="nav navbar-nav")
                    if login
                        li(id="video")
                            a(href="/bibliotheque").
                                <span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span>
                    else
                        li(id="video" style="display:none")
                            a(href="/bibliotheque").
                                <span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span>
                if translation
                    div(class="login-bloc navbar-left")
