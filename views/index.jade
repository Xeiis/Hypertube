extends layout
block content
    div.container
      div.row
        div.col-lg-12
          div.jumbotron
            h2 #{translation.title}
      div.row
        div.col-lg-12
             div(class="form-group" id="sign_up_form" style="display: none;")
                h2(class="text-center") #{translation.up}
                .group
                    input#user_name(type='text', required='')
                    span.highlight
                    span.bar
                    label.label #{translation.login}
                .group
                    input#fname(type='text', required='')
                    span.highlight
                    span.bar
                    label.label #{translation.prenom}
                .group
                    input#lname(type='text', required='')
                    span.highlight
                    span.bar
                    label.label #{translation.nom_famille}
                .group
                    input#email(type='text', required='')
                    span.highlight
                    span.bar
                    label.label #{translation.email}
                .group
                    input#pass(type='password', required='')
                    span.highlight
                    span.bar
                    label.label #{translation.mdp}
                .group
                    input#cpass(type='password', required='')
                    span.highlight
                    span.bar
                    label.label #{translation.mdp_conf}
                input(type="submit" class="btn btn-default form_stack"  id="sign_up" value="#{translation.up}")
      div.row
        div.col-lg-12
            form
             div(class="form-group" id="reset-pass-form" style="display: none;")
                h2(class="text-center") #{translation.reset_pass}
                .group
                    input#reset_uname(type='text', required='')
                    span.highlight
                    span.bar
                    label.label #{translation.login}
                .group
                    input#reset_umail(type='text', required='')
                    span.highlight
                    span.bar
                    label.label #{translation.email}
                .group(style="display:none")
                    input#reset_pass(type='password', required='' style="display:none")
                    span.highlight
                    span.bar
                    label.label #{translation.mdp}
                .group(style="display:none")
                    input#reset_cpass(type='password', required='' style="display:none")
                    span.highlight
                    span.bar
                    label.label #{translation.mdp_conf}
                input(type="submit" class="btn btn-default form_stack"  id="reset" value="#{translation.modif}")
